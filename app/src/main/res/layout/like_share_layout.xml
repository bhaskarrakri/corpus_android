<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cons_like_layout"
    android:paddingLeft="@dimen/dp_ten"
    android:paddingTop="@dimen/dp_ten"
    android:paddingRight="@dimen/dp_ten"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_like"
        android:drawableStart="@drawable/fav_likes"
        android:drawableLeft="@drawable/fav_likes"
        android:textAlignment="center"
        android:text="@string/sample"
        android:gravity="center_horizontal|center"
        android:contentDescription="@string/sample"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_share"
        app:layout_constraintBottom_toBottomOf="@+id/img_share"
        android:textSize="@dimen/sp_twenty"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:foregroundGravity="center"
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/sample"
        android:src="@android:drawable/ic_menu_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:foregroundGravity="center"
        android:layout_marginRight="@dimen/dp_ten"
        android:layout_marginEnd="@dimen/dp_ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_fav"
        android:src="@drawable/fav"
        app:layout_constraintTop_toTopOf="@+id/img_share"
        app:layout_constraintBottom_toBottomOf="@+id/img_share"
        app:layout_constraintRight_toLeftOf="@+id/img_share"
        android:contentDescription="@string/sample" />



</android.support.constraint.ConstraintLayout>
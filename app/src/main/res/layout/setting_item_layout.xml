<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cons_lay"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/img_icon"
        android:layout_margin="@dimen/dp_ten"
        android:contentDescription="@string/sample"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_thirty"
        android:id="@+id/txt_title"
        android:text=""
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_marginStart="@dimen/dp_ten"
        app:layout_constraintLeft_toRightOf="@+id/img_icon"
        app:layout_constraintTop_toTopOf="@+id/img_icon"
        app:layout_constraintBottom_toBottomOf="@+id/img_icon"/>


    <View
        android:layout_marginTop="@dimen/dp_four"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_one"
        android:background="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>